<div>
  <div>
    <h3>いいね獲得ランキング</h3>
    <% @rank.each.with_index do |rank ,i|%>
      <% if i == 5 %>
        <% break %>
      <% else %>
        第<%= i + 1 %>位
        <%= rank.user_name %>
      <% end %>
    <% end %>
  </div>
  <div>
    <table>
    <% @posts.each do |post| %>
      <tr>
        <th><%= post.post_title %></th>
      </tr>
      <tr>
        <td><%= post.post_text.truncate(30) %>...</td>
      </tr>
      <tr>
        <td><%= post.user.user_name %></td>
        <td>
          <%= link_to "もっと見る", user_signed_in? ? post_path(post.id) : new_user_registration_path %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
  <div>
    <%= paginate @posts %>
  </div>
</div>

