<div>
  <%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
  <table>
    <tr>
      <th>カテゴリ名</th>
      <td><%= f.text_field :category_name, required: true %></td>
      <td><%= f.submit '追加' %></td>
    </tr>
  </table>
  <% end %>
</div>
<div>
  <h3>カテゴリ名一覧</h3>
  <table>
    <tr>
    <% @categories.each do |category| %>
      <td><%= category.category_name %></td>
    <% end %>
    </tr>
  </table>
</div>


